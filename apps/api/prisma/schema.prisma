generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Keyword {
  id        String   @id @default(uuid())
  city      String
  text      String
  heat      Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([city, text])
  @@index([city])
  @@index([createdAt])
  @@map("keywords")
}

model Video {
  id          String   @id @default(uuid())
  externalId  String?  @unique
  platform    String   // douyin, video_channel
  title       String
  author      String
  authorId    String?
  views       Int      @default(0)
  likes       Int      @default(0)
  shares      Int      @default(0)
  comments    Int      @default(0)
  coverUrl    String?
  videoUrl    String?
  duration    Int?
  transcript  String?
  publishedAt DateTime
  keyword     String
  city        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([keyword, city])
  @@index([publishedAt])
  @@map("videos")
}

model User {
  id        String   @id @default(uuid())
  phone     String?  @unique
  nickname  String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  publishLogs PublishLog[]

  @@map("users")
}

model PublishLog {
  id          String    @id @default(uuid())
  userId      String
  platform    String    // douyin, video_channel
  videoUrl    String
  title       String
  description String?
  tags        String    // JSON 数组存储
  status      String    // pending, published, failed
  externalUrl String?   // 发布后的外部链接
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
  @@map("publish_logs")
}

// 抖音热榜数据（每天更新）
model HotTrend {
  id        String   @id @default(uuid())
  city      String                    // 城市名称
  keyword   String                    // 热词文本
  heat      Int                       // 热度值
  rank      Int                       // 排名
  source    String   @default("douyin") // 数据来源
  fetchedAt DateTime                  // 抓取时间（用于按天分组）
  createdAt DateTime @default(now())

  // 联合唯一约束：同一城市同一天同一关键词只保留一条
  @@unique([city, keyword, fetchedAt])
  @@index([city, heat])
  @@index([fetchedAt])
  @@map("hot_trends")
}
